<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/contents_back"
    >


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/contents_select" />

    <ImageButton
        android:id="@+id/fruit_veget"
        android:onClick="fruit_veget_Button"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/fruit_veget"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/animal"
        android:onClick="animal_Button"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/animal"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/ride"
        android:onClick="ride_Button"
        android:layout_width="171dp"
        android:layout_height="78dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ride"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/food"
        android:onClick="food_Button"
        android:layout_width="167dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:layout_marginTop="-80dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/food"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/dino"
        android:onClick="dino_Button"
        android:layout_width="171dp"
        android:layout_height="78dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/dino"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/place"
        android:onClick="place_Button"
        android:layout_width="167dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:layout_marginTop="-80dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/place"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:onClick="backButton"
        android:background="@android:color/transparent"
        android:src="@drawable/back_small"
        android:layout_marginTop="-560dp"
        android:layout_marginLeft="10dp"
        />


</LinearLayout>